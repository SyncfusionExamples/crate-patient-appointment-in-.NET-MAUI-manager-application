<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ManageAppointments.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ManageAppointments"  Shell.TitleColor="Transparent" Shell.TabBarTitleColor="Transparent"
    Shell.FlyoutBehavior="Locked" Shell.FlyoutItemIsVisible="True"    >
    <Shell.TitleView>
        <Grid HeightRequest="1" Background="Transparent"/>
    </Shell.TitleView>
  

    <FlyoutItem Title="Profile" >
        <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Scheduler">
        <ShellContent ContentTemplate="{DataTemplate local:CalendarPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="Appointments">
        <ShellContent ContentTemplate="{DataTemplate local:AppointmentsPage}"/>
    </FlyoutItem>

    <MenuItem Clicked="MenuItem_Clicked" Text="Logout" />
 
</Shell>
